---
interface Heading {
  depth: number
  slug: string
  text: string
}

interface Props {
  headings: Heading[]
}

const { headings } = Astro.props
const filtered = headings.filter((h) => h.depth === 2 || h.depth === 3)
---

{filtered.length > 0 && (
  <nav aria-label="On this page">
    <h4 class="text-xs font-semibold uppercase tracking-wider text-[#4fa3e0] mb-3 px-1">
      On this page
    </h4>
    <ul class="space-y-1">
      {filtered.map((h) => (
        <li>
          <a
            href={`#${h.slug}`}
            class:list={[
              'block text-xs text-[#94a3b8] hover:text-[#f0f9ff] transition-colors rounded py-1 leading-snug',
              h.depth === 3 ? 'pl-4' : 'pl-1',
            ]}
          >
            {h.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
