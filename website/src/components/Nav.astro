---
import { SITE } from '@/config/site'

const navLinks = [
  { href: '/docs/configuration', label: 'Docs' },
  { href: '/cookbook', label: 'Cookbook' },
]

const pathname = Astro.url.pathname
---

<header class="sticky top-0 z-50 border-b border-[#072038] bg-[#020d18]/90 backdrop-blur-sm">
  <nav class="max-w-[88rem] mx-auto px-4 sm:px-6 lg:px-8 h-14 flex items-center justify-between gap-4">
    <!-- Logo + wordmark -->
    <a href="/" class="flex items-center gap-2.5 shrink-0 group">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" width="32" height="32" aria-hidden="true">
        <circle cx="100" cy="100" r="90" fill="#1a1b27"/>
        <path d="M100 30v25h15c0 20-30 20-30 0h10" stroke="#f1c40f" stroke-width="6" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        <path stroke="#a9b1d6" stroke-width="2" stroke-dasharray="4,2" d="M100 55 50 90m50-35 50 35"/>
        <rect x="50" y="90" width="100" height="60" rx="4" fill="#3d59a1"/>
        <path stroke="#2b3f73" stroke-width="3" d="M65 90v60m15-60v60m40-60v60m15-60v60"/>
        <rect x="85" y="105" width="30" height="30" rx="3" fill="#1a1b27"/>
        <text x="100" y="125" font-family="monospace" font-size="16" font-weight="bold" fill="#7aa2f7" text-anchor="middle">v1</text>
      </svg>
      <span class="font-bold text-[#f0f9ff] tracking-tight text-lg group-hover:text-[#38bdf8] transition-colors">
        Shipyard
      </span>
    </a>

    <!-- Nav links -->
    <div class="flex items-center gap-1">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class:list={[
            'px-3 py-1.5 rounded-md text-sm font-medium transition-colors',
            pathname.startsWith(href.split('/').slice(0, 2).join('/'))
              ? 'text-[#38bdf8] bg-[#041424]'
              : 'text-[#94a3b8] hover:text-[#f0f9ff] hover:bg-[#072038]',
          ]}
        >
          {label}
        </a>
      ))}
    </div>

    <!-- Right side -->
    <div class="flex items-center gap-3">
      <a
        href={SITE.github}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-1.5 text-sm text-[#94a3b8] hover:text-[#f0f9ff] transition-colors"
        aria-label="Shipyard on GitHub"
      >
        <!-- GitHub icon -->
        <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true">
          <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
        </svg>
        GitHub
      </a>
    </div>
  </nav>
</header>
